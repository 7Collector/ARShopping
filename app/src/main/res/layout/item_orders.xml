<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="8dp"
    android:layout_width="match_parent"
    android:padding="18dp"
    android:background="@drawable/bg_product"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imageView_bag"
        android:layout_width="125dp"
        android:layout_height="125dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:layout_marginLeft="12dp"
        android:id="@+id/tv_arriving"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Arriving by $$ $$$$$"
        app:layout_constraintStart_toEndOf="@+id/imageView_bag"
        app:layout_constraintTop_toTopOf="@+id/imageView_bag"/>
    <TextView
        android:layout_marginLeft="12dp"
        android:id="@+id/product_name_bag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:lines="2"
        android:maxWidth="150dp"
        android:text="Product Name"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/imageView_bag"
        app:layout_constraintTop_toBottomOf="@+id/tv_arriving" />

    <TextView
        android:layout_marginLeft="12dp"
        android:id="@+id/product_price_bag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:lines="1"
        android:text="$49.90"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/imageView_bag"
        app:layout_constraintTop_toBottomOf="@id/product_name_bag" />
</androidx.constraintlayout.widget.ConstraintLayout>